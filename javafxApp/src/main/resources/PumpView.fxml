                                       <valueFactory>
                                         <SpinnerValueFactory.IntegerSpinnerValueFactory max="23" min="0" />
                                       </valueFactory>
                                    </Spinner>
                                    <Spinner fx:id="minuteSpinner" editable="true" HBox.hgrow="NEVER">
                                       <valueFactory>
                                         <SpinnerValueFactory.IntegerSpinnerValueFactory max="59" min="0" />
                                       </valueFactory>
                                    </Spinner>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox prefHeight="400.0" prefWidth="640.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="info.nightscout.comboctl.javafxApp.MainViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Paired pumps"/>
    <ListView fx:id="pairedPumpListView" onMouseClicked="#openPumpView" prefHeight="200.0" prefWidth="216.0"
              VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER" spacing="20.0">
        <Button mnemonicParsing="false" onAction="#startDiscovery" text="Start discovery"/>
        <Button mnemonicParsing="false" onAction="#stopDiscovery" text="Stop discovery"/>
    </HBox>
</VBox>
